generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String  @id   @default(uuid())
  name       String
  bar_code   String @unique
  price      Decimal
  created_at DateTime @default(now())

  @@map("products") // Table Name
}

model Category {
  id String @id @default(uuid())
  name String
  created_at DateTime @default(now())

  @@map("categories")
}